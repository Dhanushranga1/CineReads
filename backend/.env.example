# Environment Variables Template for CineReads Backend
# Copy this file to .env and fill in your actual API keys

# OpenAI-Compatible API Configuration
# For OpenAI: use default base_url and gpt-4o-mini model
# For Groq: set base_url to https://api.groq.com/openai/v1 and model to llama3-8b-8192 or mixtral-8x7b-32768
OPENAI_API_KEY=your_openai_or_groq_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1
GPT_MODEL=gpt-4o-mini

# Hardcover API Configuration  
HARDCOVER_API_KEY=your_hardcover_api_key_here

# Cache Configuration
CACHE_DIR=cache
CACHE_EXPIRE_SECONDS=3600
BOOK_CACHE_EXPIRE_SECONDS=86400

# API Limits
MAX_MOVIES_PER_REQUEST=5
GPT_MAX_TOKENS=800
GPT_TEMPERATURE=0.7

# Development
DEBUG=false